# === DATABASE ===
DATABASE_URL="postgresql://user:password@localhost:5432/security_shifts"

# === API ===
API_PORT=4000
API_HOST=localhost
NODE_ENV=development

# === JWT ===
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRY="7d"

# === CORS ===
CORS_ORIGIN="http://localhost:3000"

# === FILE STORAGE ===
# Local: "local" | AWS S3: "s3"
STORAGE_PROVIDER="local"
STORAGE_LOCAL_PATH="./uploads"
# AWS_S3_BUCKET=your-bucket
# AWS_S3_REGION=eu-west-1
# AWS_ACCESS_KEY_ID=xxx
# AWS_SECRET_ACCESS_KEY=xxx

# === WHATSAPP ===
WHATSAPP_PROVIDER="mock"
# Provider options: "mock", "meta", "twilio"
# If using Meta:
# WHATSAPP_PHONE_NUMBER_ID=xxx
# WHATSAPP_BUSINESS_ACCOUNT_ID=xxx
# WHATSAPP_ACCESS_TOKEN=xxx
# WHATSAPP_WEBHOOK_VERIFY_TOKEN=xxx

# === EMAIL ===
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM="noreply@securityshifts.local"

# === TIMEZONE ===
TZ="Europe/Rome"

# === DEFAULTS ===
DEFAULT_HOURLY_RATE_CENTS=1500
DOCUMENT_REMINDER_DAYS=30
WHATSAPP_CONFIRMATION_HOUR=20

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === WEB ===
NEXT_PUBLIC_API_URL="http://localhost:4000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
